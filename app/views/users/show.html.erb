<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      <table class="table table-bordered">
        <%= render 'day_books_count', today_book: @today_book, yesterday_book: @yesterday_book, the_day_before: @the_day_before %>
      </table>
      <table class="table table-bordered">
        <%= render 'week_books_count', this_week_book: @this_week_book, last_week_book: @last_week_book, the_week_before: @the_week_before %>
      </table>
    </div>
  </div>
</div>
